{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "expo/tsconfig.base",
  "display": "Default",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "baseUrl": "./",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "incremental": true,
    "importHelpers": true,
    "inlineSources": false,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["esnext", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitHelpers": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "~/*": ["src/*"],
      "~/assets/*": ["src/assets/*"],
      "~/components/*": ["src/components/*"],
      "~/config/*": ["src/config/*"],
      "~/design-system/*": ["src/design-system/*"],
      "~/hooks/*": ["src/hooks/*"],
      "~/i18/*": ["src/i18/*"],
      "~/navigation/*": ["src/navigation/*"],
      "~/screens/*": ["src/screens/*"],
      "~/services/*": ["src/services/*"],
      "~/theme/*": ["src/theme/*"],
      "~/types/*": ["types/*"],
      "~/utils/*": ["src/utils/*"]
    },
    "preserveConstEnums": true,
    "preserveWatchOutput": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["node"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "index.d.ts",
    "lib.es5.d.ts",
    ".eslintrc.js",
    ".expo/types/**/*.ts",
    ".prettierrc.js",
    "app",
    "app.config.ts",
    "expo-env.d.ts",
    "metro.config.js",
    "plugins",
    "src",
    "test",
    "types",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}
